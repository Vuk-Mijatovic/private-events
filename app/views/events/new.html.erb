<h1>Create New Event</h1>
<%= form_with model: @event do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :event_date %>
    <br>
    <%= f.date_select :event_date %>
    <br>
    <%= f.label :location %>
    <br>
    <%= f.text_field :location %>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, placeholder: "Describe your event here...", cols: 40, rows: 20 %>
    <br>
    <%= f.submit "Create" %>
    <% end %>